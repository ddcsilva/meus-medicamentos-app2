{
  "name": "meus-medicamentos",
  "version": "1.0.0",
  "description": "Sistema de Controle de Estoque Familiar de Medicamentos - MVP Frontend + API Node + Firebase",
  "private": true,
  "scripts": {
    "install:all": "npm run install:frontend && npm run install:api && npm run install:functions",
    "install:frontend": "cd frontend && npm install",
    "install:api": "cd api && npm install",
    "install:functions": "cd functions && npm install",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:api\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:api": "cd api && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "build:api": "cd api && npm run build",
    "build:functions": "cd functions && npm run build",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:api": "cd api && npm run lint"
  },
  "keywords": [
    "medicamentos",
    "estoque",
    "angular",
    "nodejs",
    "firebase",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

