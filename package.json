{
  "name": "meus-medicamentos",
  "version": "1.0.0",
  "description": "Sistema de Controle de Estoque Familiar de Medicamentos - MVP Frontend + API Node + Firebase",
  "private": true,
  "scripts": {
    "install:all": "npm run install:frontend && npm run install:api && npm run install:functions",
    "install:frontend": "cd frontend && npm install",
    "install:api": "cd api && npm install",
    "install:functions": "cd functions && npm install",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:api\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:api": "cd api && npm run dev",
    "dev:functions": "cd functions && npm run serve",
    "build": "npm run build:frontend && npm run build:api && npm run build:functions",
    "build:frontend": "cd frontend && npm run build",
    "build:api": "cd api && npm run build",
    "build:functions": "cd functions && npm run build",
    "lint": "npm run lint:frontend && npm run lint:api && npm run lint:functions",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:api": "cd api && npm run lint",
    "lint:functions": "cd functions && npm run lint",
    "test": "npm run test:frontend && npm run test:api",
    "test:frontend": "cd frontend && npm test",
    "test:api": "cd api && npm test",
    "clean": "npm run clean:frontend && npm run clean:api && npm run clean:functions",
    "clean:frontend": "cd frontend && rimraf dist .angular",
    "clean:api": "cd api && npm run clean",
    "clean:functions": "cd functions && npm run clean",
    "deploy:functions": "firebase deploy --only functions",
    "emulators": "firebase emulators:start"
  },
  "keywords": [
    "medicamentos",
    "estoque",
    "angular",
    "nodejs",
    "firebase",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

